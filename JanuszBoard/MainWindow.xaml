<Window x:Class="JanuszBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanuszBoard"
        mc:Ignorable="d"
        Title="Better Call Janusz" Height="450" Width="800"
        KeyDown="Window_KeyDown"
		Background="{DynamicResource backgroundImage}">
    <Window.Resources>
        <ImageSource x:Key="imgSource">hqdefault.png</ImageSource>
        <ImageBrush x:Key="backgroundImage" ImageSource="{DynamicResource imgSource}" Opacity="0.3" />
    </Window.Resources>
        <Grid>
        <Button x:Name="connbutt" Content="Połącz" FontFamily="{StaticResource SFFedora}" HorizontalAlignment="Left" Margin="126,49,0,0" VerticalAlignment="Top" Click="Connbutt_Click"/>
        <Button x:Name="startbutt" Content="Start" FontFamily="{StaticResource SFFedora}" HorizontalAlignment="Left" Margin="418,256,0,0" VerticalAlignment="Top" Height="62" Width="102" Click="Startbutt_Click"/>
        </Grid>
</Window>
